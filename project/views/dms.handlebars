<h1>DungeonMasters</h1>
<h2>Search, Create, Delete or Update Dungeon Masters and Their Games</h2>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
        }
    </style>
</head>
<body>
  <form action="" id="filterByGame">
		<input type="text" placeholder="Example: Azeroth" name="gameName">
		<input type="submit" value="Filter By Game">
	</form><br>

  <form action="" id="dmCreate">
    <input type="text" placeholder="First Name" name="firstname">
    <input type="text" placeholder="Last Name" name="lastname">
    <input type="text" placeholder="Years of experience" name="experience">
    <input type="text" placeholder="Email" name="dmEmail">
    <input type="submit" value="Create DM">
  </form>

	<form action="" id="submitDM">
	<table>
	    <thead>
	        <th>First Name</th>
	        <th>Last Name</th>
	        <th>Experience</th>
          <th>Games</th>
          <th>Population</th>
	        <th>Email</th>
	    </thead>
      <tbody>
        {{#each DM}}
        <tr>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{experience}}</td>
          {{#if gameName}}
            <td>{{gameName}}</td>
            <td>{{playerNum}}</td>
          {{else}}
            <td>None</td>
            <td>N/A</td>
          {{/if}}
          <td>{{email}}</td>
          <th><button type="button" onclick="getForm('modify')">Modify DM</button></th>
          <th><button type="button" onclick="getForm('delete')">Delete DM</button></th>
        </tr>
        {{/each}}
      </tbody>
	</table>
</body>
