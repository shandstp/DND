	            <th><button type="button" onclick="getForm('delete')">Delete DM</button></th>
		    </tr>
		</table>
	    </form>
	    <form action="" id="submitGame" style="display:none">
	    	<table>
		    <tr>
		        <th>GameId</th>
		        <th>Name</th>
		        <th>DM ID</th>
		        <th>Player Number</th>
		        <th>Modify</th>
		        <th>Delete</th>
		    </tr>
		    <tr>
		        <th>1</th>
		        <th>Haren</th>
