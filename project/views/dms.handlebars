<h1>DungeonMasters</h1>
<h2>Search, Create, Delete or Update Dungeon Masters and Their Games</h2>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
        }
    </style>
</head>
<body>
	<button type="button" onclick="getForm('dmSearch')">Find Dungeon Master</button>
	<button type="button" onclick="getForm('dmCreate')">Make Dungeon Master</button>
	<button type="button" onclick="getForm('gameSearch')">Find Game</button>
	<button type="button" onclick="getForm('gameCreate')">Make Game</button>
	<div id="playerForm">
		<form action="" id="dmSearch" style="display:none">
			First Name:<br>
			<input type="text" name="firstname"><br>
			Last Name:<br>
			<input type="text" name="lastname"><br>
			<button type="button" onclick="getForm('submitDM')">Submit</button>
		</form>	
		<form action="" id="dmCreate" style="display:none">
			First Name:<br>
			<input type="text" name="firstname"><br>
			Last Name:<br>
			<input type="text" name="lastname"><br>
			Experience:<br>
			<input type="text" name="experience"><br>
			Email:<br>
			<input type="text" name="email"><br>
			<input type="submit" value="Create">
		</form>
		<form action="" id="gameSearch" style="display:none">
			Game Name:<br>
			<input type="text" name="gameName">
			<button type="button" onclick="getForm('submitGame')">Submit</button>
		</form>
		<form action="" id="gameCreate" style="display:none">
			Game Name:<br>
			<input type="text" name="gameName"><br>
			Dungeon Master:<br>
			<input types="text" name="gameDM"><br>
			Number of Players:<br>
			<input types="text" name="numPlayers"><br>
			<input type="submit" value="Create">
		</form>
	    <form action="" id="submitDM" style="display:none">
	    	<table>
		    <tr>
		        <th>DMID</th>
		        <th>First Name</th>
		        <th>Last Name</th>
		        <th>Experience</th>
		        <th>Email</th>
		        <th>Modify</th>
		        <th>Delete</th>
